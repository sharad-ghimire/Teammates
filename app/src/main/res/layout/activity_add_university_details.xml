<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddUniversityDetails"
    android:orientation="vertical">
    <ImageView
        android:layout_width="200sp"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:src="@drawable/teammates" />

        <EditText

            android:layout_marginBottom="10dp"
            android:id="@+id/universityName"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/person_clip_art"
            android:hint="Your University Name"
            />

        <EditText
            android:layout_marginBottom="10dp"
            android:layout_margin="20dp"
            android:id="@+id/majorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/person_clip_art"
            android:hint="Your Major Name"
            />


        <EditText
            android:layout_marginBottom="10dp"
            android:id="@+id/subjectName"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/person_clip_art"
            android:hint="Your Subject Name"
            />


    <Button
        android:id="@+id/addUniDetailsBtn"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:text="Add"
        android:textColor="@color/white" />





</LinearLayout>