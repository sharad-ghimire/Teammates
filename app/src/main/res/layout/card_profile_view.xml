<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutCardView"
    android:layout_height="wrap_content"
    android:outlineProvider="bounds"
    android:clipToPadding="false"
    android:padding="10dp">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:elevation="2dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image"
                            android:layout_width="147dp"
                            android:layout_height="132dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/handshake" />
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_marginLeft="100sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/nameOfMate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@id/image"
                            android:text="@string/sharad_ghimire"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginBottom="18dp"/>
                        <TextView
                            android:id="@+id/matchIDTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>
                        <Button
                            android:id="@+id/addButtonMatches"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/addd"
                            android:textColor="@color/white"
                            android:background="@color/colorPrimary"/>
                    </LinearLayout>


                </FrameLayout>


        </android.support.v7.widget.CardView>





</RelativeLayout>